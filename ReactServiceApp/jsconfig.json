{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@ui/*": ["src/ui/*"],
			"@layouts/*": ["src/ui/layouts/*"],
			"@services/*": ["src/services/*"],
			"@features/*": ["src/features/*"],
			"@pages/*": ["src/pages/*"],
			"@context/*": ["src/context/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
